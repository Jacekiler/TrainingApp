<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productsAndCalories.dailyCalories.DailyCaloriesDetailsActivity">

    <include layout="@layout/app_bar_schema"/>

    <TextView
        android:id="@+id/dateDailyCaloriesDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/app_bar_height"
        android:paddingLeft="@dimen/default_padding"
        android:text="TextView"
        android:textSize="16sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listDailyCaloriesDetails"
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/dateDailyCaloriesDetails"
        android:layout_above="@id/addDailyCaloriesDetails"
        />

    <Button
        android:id="@+id/addDailyCaloriesDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Dodaj"/>
</RelativeLayout>