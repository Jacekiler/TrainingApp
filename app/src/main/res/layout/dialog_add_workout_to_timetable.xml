<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateAddWorkoutToTimetableDialog"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"/>


    <Button
        android:id="@+id/nextDateAddWorkoutToTimetableDialog"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/dateAddWorkoutToTimetableDialog"
        android:layout_alignTop="@+id/dateAddWorkoutToTimetableDialog"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/dateAddWorkoutToTimetableDialog"
        android:text="+"/>

    <Button
        android:id="@+id/previousDateAddWorkoutToTimetableDialog"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/dateAddWorkoutToTimetableDialog"
        android:layout_alignTop="@+id/dateAddWorkoutToTimetableDialog"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/dateAddWorkoutToTimetableDialog"
        android:text="-"/>



</RelativeLayout>