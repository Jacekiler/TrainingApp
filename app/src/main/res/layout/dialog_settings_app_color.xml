<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:id="@+id/blueColorButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/settings_color_icon"
        android:backgroundTint="@color/colorPrimaryBlue"/>

    <Button
        android:id="@+id/greenColorButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/blueColorButton"
        android:layout_marginTop="100dp"
        android:background="@drawable/settings_color_icon"
        android:backgroundTint="@color/colorPrimaryGreen"/>

    <Button
        android:id="@+id/whiteColorButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/blueColorButton"
        android:layout_marginTop="182dp"
        android:background="@drawable/settings_color_icon"
        android:backgroundTint="@color/colorWhite"/>

    <RadioButton
        android:id="@+id/blueRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="107dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"/>

    <RadioButton
        android:id="@+id/greenRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/blueRadioButton"
        android:layout_marginTop="111dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"/>

    <RadioButton
        android:id="@+id/whiteRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/blueRadioButton"
        android:layout_marginTop="190dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"/>

</RelativeLayout>