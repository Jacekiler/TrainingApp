<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/app_bar_height"
    tools:showIn="@layout/activity_workouts">


    <android.support.design.widget.TabLayout
        android:id="@+id/workoutsTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:tabBackground="@drawable/tab_item"
        app:tabSelectedTextColor="?attr/tabsTextColor"
        app:tabTextColor="?attr/tabsTextColor"
        >

        <android.support.design.widget.TabItem
            android:id="@+id/simpleWorkoutsTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zwykłe"
            />

        <android.support.design.widget.TabItem
            android:id="@+id/intervalWorkoutsTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interwały"
            />
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/workoutChooseViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/tab_layout_height">

    </android.support.v4.view.ViewPager>

