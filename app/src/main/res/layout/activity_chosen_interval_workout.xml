<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".physicalActivity.workouts.interval.ChosenIntervalWorkoutActivity">

    <include layout="@layout/app_bar_schema"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/choosenIntervalWorkoutRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/addExerciseToIntervalWorkout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        />

    <Button
        android:id="@+id/addExerciseToIntervalWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:text="Dodaj Ä‡wiczenie"/>

    <TextView
        android:id="@+id/choosenIntervalWorkoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        />

    <Button
        android:id="@+id/startIntervalWorkout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Rozpocznij trening"
        android:textSize="21sp"/>

    <TextView
        android:id="@+id/deleteWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/choosenIntervalWorkoutName"
        android:layout_marginStart="-50dp"
        android:layout_toEndOf="@+id/choosenIntervalWorkoutRecycler"
        android:background="@drawable/ic_delete"/>

    <TextView
        android:id="@+id/addTrainingFromIntervalWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/choosenIntervalWorkoutName"
        android:layout_marginEnd="-50dp"
        android:layout_toStartOf="@+id/choosenIntervalWorkoutRecycler"
        android:background="@drawable/ic_plus_sign"/>

</RelativeLayout>