<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simple_workouts_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".physicalActivity.workouts.simple.SimpleWorkoutsFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/simpleWorkoutsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/addSimpleWorkout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/addSimpleWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Nowy"/>
</RelativeLayout>