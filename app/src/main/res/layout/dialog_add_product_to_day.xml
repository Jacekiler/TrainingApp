<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateAddToDayDialog"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/nextDayAddToDayDialog"
        android:layout_width="33dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/dateAddToDayDialog"
        android:layout_alignTop="@+id/dateAddToDayDialog"
        android:layout_toEndOf="@+id/dateAddToDayDialog"
        android:gravity="center"
        android:text="+"/>

    <Button
        android:id="@+id/previousDayAddToDayDialog"
        android:layout_width="33dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/dateAddToDayDialog"
        android:layout_alignTop="@+id/dateAddToDayDialog"
        android:layout_toStartOf="@+id/dateAddToDayDialog"
        android:gravity="center"
        android:text="-"/>

    <TextView
        android:id="@+id/nameAddToDayDialog"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/amountAddToDayDialog"
        android:layout_alignStart="@+id/previousDayAddToDayDialog"
        android:layout_below="@+id/dateAddToDayDialog"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/amountAddToDayDialog"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/nextDayAddToDayDialog"
        android:layout_below="@+id/dateAddToDayDialog"
        android:layout_toEndOf="@+id/nameAddToDayDialog"
        android:inputType="number"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/unitAddToDayDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/amountAddToDayDialog"
        android:layout_below="@+id/dateAddToDayDialog"
        android:layout_toEndOf="@+id/nextDayAddToDayDialog"
        android:gravity="center_vertical"
        android:text="g"
        android:textSize="20sp"
        android:visibility="visible"/>
</RelativeLayout>