<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item"
    >

    <TextView
        android:id="@+id/nameDailyCaloriesDetailsRow"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/amountDailyCaloriesDetailsRow"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/default_padding"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/amountDailyCaloriesDetailsRow"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/caloriesDailyCaloriesDetailsRow"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/caloriesDailyCaloriesDetailsRow"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingRight="3dp"
        android:textSize="20sp"/>
</RelativeLayout>