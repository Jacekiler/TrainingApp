<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsActivity"
    android:orientation="vertical"
    >

    <include layout="@layout/app_bar_schema"/>

    <RelativeLayout
        android:id="@+id/appColorsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_padding"
            android:text="Motyw kolorystyczny"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/appColorSettingsIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_padding"
            android:background="@drawable/settings_color_icon"
            android:backgroundTint="@color/colorPrimaryBlue"
            />


    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>

    <RelativeLayout
        android:id="@+id/defaultTimerValuesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timer_sign_settings"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_padding"
            android:text="Timer interwałowy:"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/timer_sign_settings"
            android:paddingLeft="@dimen/default_padding"
            android:text="Wartości domyślne:"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView17"
            android:paddingLeft="@dimen/default_padding"
            android:text="Przygotowanie:"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView20"
            android:paddingLeft="@dimen/default_padding"
            android:text="Praca:"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView21"
            android:paddingLeft="@dimen/default_padding"
            android:text="Odpoczynek:"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView22"
            android:paddingLeft="@dimen/default_padding"
            android:text="Liczba ćwiczeń:"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView23"
            android:paddingLeft="@dimen/default_padding"
            android:text="Liczba serii:"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView24"
            android:paddingLeft="@dimen/default_padding"
            android:text="Przerwa między seriami:"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView25"
            android:paddingLeft="@dimen/default_padding"
            android:text="Schłodzenie:"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/defaultPrepareSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView17"
            android:layout_toEndOf="@+id/textView20"
            android:paddingLeft="@dimen/default_padding"
            />

        <TextView
            android:id="@+id/defaultWrokSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:layout_toEndOf="@+id/textView21"
            android:paddingLeft="@dimen/default_padding"
            />

        <TextView
            android:id="@+id/defaultRestSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView21"
            android:layout_toEndOf="@+id/textView22"
            android:paddingLeft="@dimen/default_padding"
            />

        <TextView
            android:id="@+id/defaultExercisesSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView22"
            android:layout_toEndOf="@+id/textView23"
            android:paddingLeft="@dimen/default_padding"
            />

        <TextView
            android:id="@+id/defaultSetsSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_toEndOf="@+id/textView24"
            android:paddingLeft="@dimen/default_padding"
            />

        <TextView
            android:id="@+id/defaultSetsRestSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView24"
            android:layout_toEndOf="@+id/textView25"
            android:paddingLeft="@dimen/default_padding"
            />

        <TextView
            android:id="@+id/defaultCoolingSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView25"
            android:layout_toEndOf="@+id/textView26"
            android:paddingLeft="@dimen/default_padding"
            />

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>

    <RelativeLayout
        android:id="@+id/startActivityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/default_padding"
            android:text="Ekran startowy"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/currentStartActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView16"
            android:paddingLeft="@dimen/default_padding"
            android:text="TextView"
            android:textSize="15sp"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Switch
            android:id="@+id/vibrationsSwitchSettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:text="Wibracje"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textColor="?android:attr/textColorSecondary"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>

</LinearLayout>